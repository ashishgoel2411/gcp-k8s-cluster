pipeline {
 agent any
  environment {
     SVC_ACCOUNT_KEY = credentials('terraform-auth')
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
         sh 'mkdir -p creds'
         sh 'echo $SVC_ACCOUNT_KEY | base64 -d > ./creds/demoaccount.json'
      }
    }	
    
	stage('TF Init') {
      steps {
        sh 'terraform init'
        sh 'terraform import google_compute_network.default default'
      }      
    }
	stage('TF Plan') {
      steps {
        sh 'terraform plan'
      }      
    }	
    stage('TF Apply') {
      steps {
        sh 'terraform apply -input=false -auto-approve'
      }
    }
  }
}